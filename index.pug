doctype html
html(lang="en")

head
  title Calculator
  meta(charset="UTF-8")
  meta(name="viewport" content="width=device-width, initial-scale=1.0")
  link(rel="stylesheet" href="assets/css/style.css")

body
  .calc-container
    h1 calc
    p.screen-message.handle max screen limit reached
    #screen 0

    .buttons
      div
        button.ops-pad.top-buttons#clear AC
        button.ops-pad.top-buttons#negate +/-
        button.ops-pad.top-buttons#percent %
        button.ops-pad.op-buttons.basic-ops#divide &divide;

      div
        button.num-pad 7 
        button.num-pad 8
        button.num-pad 9
        button.ops-pad.op-buttons.basic-ops#times &times;

      div
        button.num-pad 4
        button.num-pad 5
        button.num-pad 6
        button.ops-pad.op-buttons.basic-ops#minus &minus;

      div
        button.num-pad 1
        button.num-pad 2
        button.num-pad 3
        button.ops-pad.op-buttons.basic-ops#plus +

      div
        button.num-pad.zero-btn 0
        button.ops-pad#decimal .
        button.ops-pad.op-buttons#equals =
		
  footer.footer
    div
      .icons
        a(target="_blank" href="https://www.freecodecamp.com/chazmcgrill")
          i(aria-hidden="true").fa.fa-free-code-camp
        a(target="_blank" href="https://twitter.com/charlietcoder")
          i(aria-hidden="true").fa.fa-twitter
        a(target="_blank" href="https://github.com/chazmcgrill")
          i(aria-hidden="true").fa.fa-github
        a(target="_blank" href="https://www.linkedin.com/in/charliejbtaylor/")
          i(aria-hidden="true").fa.fa-linkedin
        a(target="_blank" href="https://codepen.io/chazmcgrill/")
          i(aria-hidden="true").fa.fa-codepen
